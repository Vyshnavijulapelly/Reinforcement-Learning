      "source": [
        "# ======================================================\n",
        "# Behavioral Cloning Example: CartPole-v1\n",
        "# ======================================================\n",
        "\n",
        "import gymnasium as gym\n",
        "import torch\n",
        "import torch.nn as nn\n",
        "import torch.optim as optim\n",
        "import numpy as np\n",
        "\n",
        "# ----------------------------\n",
        "# 1️⃣ Expert Policy (Rule-Based)\n",
        "# ----------------------------\n",
        "def expert_policy(obs):\n",
        "    # obs = [cart_position, cart_velocity, pole_angle, pole_velocity]\n",
        "    _, _, angle, angle_velocity = obs\n",
        "    return 0 if angle < 0 else 1  # left if leaning left, else right\n",
        "\n",
        "\n",
        "# ----------------------------\n",
        "# 2️⃣ Collect Expert Demonstrations\n",
        "# ----------------------------\n",
        "env = gym.make(\"CartPole-v1\")\n",
        "obs_data, action_data = [], []\n",
        "\n",
        "for episode in range(20):  # collect 20 expert episodes\n",
        "    obs, _ = env.reset()\n",
        "    done = False\n",
        "    while not done:\n",
        "        action = expert_policy(obs)\n",
        "        obs_data.append(obs)\n",
        "        action_data.append(action)\n",
        "        obs, reward, done, truncated, info = env.step(action)\n",
        "        if done or truncated:\n",
        "            break\n",
        "\n",
        "obs_data = np.array(obs_data)\n",
        "action_data = np.array(action_data)\n",
        "print(f\"Collected {len(obs_data)} state-action pairs.\")\n",
        "\n",
        "\n",
        "# ----------------------------\n",
        "# 3️⃣ Define Neural Network Policy\n",
        "# ----------------------------\n",
        "class PolicyNet(nn.Module):\n",
        "    def __init__(self, input_dim=4, output_dim=2):\n",
        "        super(PolicyNet, self).__init__()\n",
        "        self.net = nn.Sequential(\n",
        "            nn.Linear(input_dim, 64),\n",
        "            nn.ReLU(),\n",
        "            nn.Linear(64, output_dim)\n",
        "        )\n",
        "\n",
        "    def forward(self, x):\n",
        "        return self.net(x)\n",
        "\n",
        "\n",
        "# ----------------------------\n",
        "# 4️⃣ Train the Behavioral Cloning Model\n",
        "# ----------------------------\n",
        "policy = PolicyNet()\n",
        "optimizer = optim.Adam(policy.parameters(), lr=0.001)\n",
        "criterion = nn.CrossEntropyLoss()\n",
        "\n",
        "X = torch.FloatTensor(obs_data)\n",
        "y = torch.LongTensor(action_data)\n",
        "\n",
        "for epoch in range(50):\n",
        "    logits = policy(X)\n",
        "    loss = criterion(logits, y)\n",
        "\n",
        "    optimizer.zero_grad()\n",
        "    loss.backward()\n",
        "    optimizer.step()\n",
        "\n",
        "    if (epoch + 1) % 10 == 0:\n",
        "        print(f\"Epoch {epoch+1}: Loss = {loss.item():.4f}\")\n",
        "\n",
        "\n",
        "# ----------------------------\n",
        "# 5️⃣ Evaluate the Cloned Policy\n",
        "# ----------------------------\n",
        "def evaluate(policy, episodes=5, render=False):\n",
        "    env = gym.make(\"CartPole-v1\", render_mode=\"human\" if render else None)\n",
        "    total_rewards = []\n",
        "    for _ in range(episodes):\n",
        "        obs, _ = env.reset()\n",
        "        done = False\n",
        "        total_reward = 0\n",
        "        while not done:\n",
        "            obs_tensor = torch.FloatTensor(obs).unsqueeze(0)\n",
        "            with torch.no_grad():\n",
        "                logits = policy(obs_tensor)\n",
        "                action = torch.argmax(logits, dim=1).item()\n",
        "            obs, reward, done, truncated, info = env.step(action)\n",
        "            total_reward += reward\n",
        "            if done or truncated:\n",
        "                break\n",
        "        total_rewards.append(total_reward)\n",
        "    env.close()\n",
        "    print(f\"Average reward over {episodes} episodes: {np.mean(total_rewards):.2f}\")\n",
        "\n",
        "\n",
        "# ----------------------------\n",
        "# 6️⃣ Test the Behavioral Cloned Agent\n",
        "# ----------------------------\n",
        "evaluate(policy, episodes=5, render=False)  # Set render=True to visualize\n"
      ]
    }
  ]
}